<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox prefWidth="200.0" styleClass="block-label" stylesheets="@dashboardStyle.css">
         <children>
            <Label fx:id="blockHeader" prefHeight="20.0" prefWidth="150.0" stylesheets="@dashboardStyle.css" text="Label">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </Label>
            <Label fx:id="changeNotify" prefHeight="20.0" prefWidth="650.0" stylesheets="@dashboardStyle.css" text="Label" textFill="#db2525">
               <font>
                  <Font name="System Italic" size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <AnchorPane id="AnchorPane" prefWidth="800.0">
         <children>
            <TextArea fx:id="editableText" prefRowCount="1" prefWidth="800.0" wrapText="true" />
         </children>
      </AnchorPane>
      <HBox prefHeight="30.5" prefWidth="200.0">
         <children>
            <Button fx:id="deleteButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" styleClass="extra-scene-button" stylesheets="@dashboardStyle.css">
               <graphic>
                  <ImageView fitHeight="14.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../image/trash.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="returnToYoursButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" styleClass="extra-scene-button" stylesheets="@dashboardStyle.css">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../image/undo.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="switchToOtherButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" styleClass="extra-scene-button" stylesheets="@dashboardStyle.css">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../image/arrow.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <ComboBox fx:id="otherEditComboBox" prefHeight="17.0" prefWidth="150.0" promptText="Other Edit By" styleClass="extra-scene-button" stylesheets="@dashboardStyle.css" />
            <Button fx:id="upButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" styleClass="extra-scene-button" stylesheets="@dashboardStyle.css">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../image/up-arrow.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="downButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" styleClass="extra-scene-button" stylesheets="@dashboardStyle.css">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../image/down-arrow.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
